                <div class="d-flex flex-column justify-content-center">
                    <div class="d-flex flex-row">
                        <strong class="vehicleinfo-row">Maximum days shown on User Dashboard:</strong>
                        <%--<dot:TextBox class="vehicleinfo-row" Text="{value: Settings.DaysOnUserDashboard}" Type="number" />--%>
