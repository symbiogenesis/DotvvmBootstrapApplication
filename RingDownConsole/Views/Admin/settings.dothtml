        <div class="p-2 mb-3 grey lighten-2 z-depth-1">
            <fieldset class="d-flex flex-column bg-light panel search-panel px-4">
                <legend>
                    <div class="d-flex flex-row align-items-center px-1">
                        <i class="fa-cog m-0 pr-1" />
